---
# vim: ft=yaml

rulesdir:
  - hack/rules

use_default_rules: true

display_relative_path: true

verbosity: 1

exclude_paths:
  - .github
  - plugins
  - hack
  - tests
  - data
  - examples

skip_list:
  - var-naming[no-role-prefix]

warn_list:
  - ignore-errors
  - jinja[spacing]   # multiline is not working https://github.com/ansible/ansible-lint/discussions/3015
  - no-changed-when
  - yaml[line-length]
...
